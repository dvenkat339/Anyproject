    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:63515",
            "trace": true,
            "runtimeArgs": [
                "--new-window",
                "--user-data-dir-D:/windows",
                "--remote-debugging-port=6505"
            ],
    
            "webRoot": "${workspaceFolder}/src/",
            "sourceMaps": true
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}